body
  font-family 'Pretendard Variable', Pretendard, -apple-system, BlinkMacSystemFont, system-ui, Roboto, 'Helvetica Neue', 'Segoe UI', 'Apple SD Gothic Neo', sans-serif

.theme-default-content
  word-break break-word
  overflow-wrap anywhere
  padding 0 1.5rem !important

  code
    font-family 'Victor Mono', 'Pretendard', monospace
    font-weight 500

  div[class*="language-"]
    margin 0 -1rem
    background: transparent
    pre
      border 1px solid #ccc
      border-radius: 6px
      background-color: #f3f3f3
    code
      color #000000
      border none

table
  background-color #ffffff
  font-size 0.95rem

th, td
  background-color #ffffff
  border 1px solid #dcdcdc
  padding 0.6em 1em
  text-align left

th
  background-color #f9f9f9
  font-weight 600

.sidebar
  top 0

.sidebar > .sidebar-links
  padding-top 100px !important

.page-nav
  display none

.theme-default-content img
  border-radius 6px

.search-box input
  border 1px solid $borderColor

.last-updated
  text-align right

.search-box input + svg {
  display: none !important;
}

@media print
  .navbar,
  .sidebar,
  .footer
    display none

  .theme-default-content
    margin-left 0
    padding 0 2rem
    max-width 100%

  body
    overflow visible